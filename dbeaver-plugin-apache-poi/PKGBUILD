# Maintainer: Muflone http://www.muflone.com/contacts/english/

pkgname=dbeaver-plugin-apache-poi
pkgver=5.4.1
pkgrel=1
pkgdesc='DBeaver library for Microsoft Office documents'
arch=('any')
url='https://dbeaver.io/'
license=('Apache-2.0')
makedepends=('unzip')
depends=('dbeaver>=4.2.5')
source=("https://dbeaver.io/update/ce/latest/plugins/org.jkiss.bundle.apache.poi_${pkgver}.jar"
        "org.apache.commons.commons-compress_1.28.0.jar"::"https://repo.maven.apache.org/maven2/org/apache/commons/commons-compress/1.28.0/commons-compress-1.28.0.jar"
        "${pkgname}.info")
sha256sums=('8459883a08730a78807b63d3d9896cffd8476eb211471d89a968603955a544e8'
            'e1522945218456f3649a39bc4afd70ce4bd466221519dba7d378f2141a4642ca'
            '99527792f5ff74ac20d68513fb2d3f87345775de5b9c8599e655248a5eea55ed')
noextract=("org.jkiss.bundle.apache.poi_${pkgver}.jar"
           "org.apache.commons.commons-compress_1.28.0.jar")

package() {
  # Install plugin
  install -m 755 -d "${pkgdir}/usr/lib/dbeaver/plugins"
  install -m 644 -t "${pkgdir}/usr/lib/dbeaver/plugins" \
    "${srcdir}/org.jkiss.bundle.apache.poi_${pkgver}.jar" \
    "${srcdir}/org.apache.commons.commons-compress_1.28.0.jar"

  # Add configuration file (handled by the hook)
  install -m 755 -d "${pkgdir}/etc/dbeaver/bundles.d"
  install -m 644 "${srcdir}/${pkgname}.info" "${pkgdir}/etc/dbeaver/bundles.d/20-${pkgname}.info"
}
